{
  "name": "tarrasqueapp",
  "version": "1.0.0-alpha",
  "private": true,
  "description": "Free & Open-Source Virtual Tabletop for Dungeons & Dragons",
  "keywords": [
    "tarrasque",
    "dnd5e",
    "vtt"
  ],
  "homepage": "https://tarrasque.app",
  "bugs": {
    "url": "https://github.com/tarrasqueapp/tarrasqueapp/issues",
    "email": "support@tarrasque.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tarrasqueapp/tarrasqueapp"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Richard Solomou",
    "email": "richard@tarrasque.app",
    "url": "https://tarrasque.app"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "app": "pnpm --filter @tarrasque/app",
    "build": "turbo build",
    "common": "pnpm --filter @tarrasque/common",
    "dev": "dotenv -- turbo dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "lint-staged": "lint-staged",
    "prepare": "husky",
    "renderer": "pnpm --filter @tarrasque/renderer",
    "sdk": "pnpm --filter @tarrasque/sdk",
    "start": "turbo start",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@tronite/style-guide": "^0.0.13",
    "@types/node": "^20.14.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "happy-dom": "^14.12.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.1",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@8.15.4"
}
